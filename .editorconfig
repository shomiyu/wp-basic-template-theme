# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
# 2 space indentation
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
charset = utf-8
trim_trailing_whitespace = true

# 4 space indentation
[*.php]
indent_size = 4
